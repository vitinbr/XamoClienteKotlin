<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.perfil.PerfilFragment">

    <LinearLayout
        android:id="@+id/linearTopoPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="#EDEDED"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearCorpoPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42sp"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="20sp"
            app:srcCompat="@drawable/image_logo_loja"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="23dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="30sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomePerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8sp"
                android:text="José Otávio"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textEmailPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jose@gmail.com" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCorpoPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTopoPerfil">

        <View
            android:id="@+id/divisor_meu_pedido"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="4sp"
            android:background="#E8E8E8" />

        <LinearLayout
            android:id="@+id/linearPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPerfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="4sp"
                android:layout_marginEnd="8sp"
                android:layout_marginBottom="4sp"
                android:layout_weight="1"
                android:text="Perfil"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageBtnSetaPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:layout_marginRight="16sp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/icons_back" />
        </LinearLayout>

        <View
            android:id="@+id/divisorPerfil2"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"
            android:background="#E8E8E8" />

        <LinearLayout
            android:id="@+id/linearPagamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPagamentos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="4sp"
                android:layout_marginRight="8sp"
                android:layout_marginBottom="4sp"
                android:layout_weight="1"
                android:text="Histórico de pedidos"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageBtnSetaPagamentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:layout_marginRight="16sp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/icons_back" />
        </LinearLayout>

        <View
            android:id="@+id/divisorPerfil3"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"
            android:background="#E8E8E8" />

        <LinearLayout
            android:id="@+id/linearSobreApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSobreApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="4sp"
                android:layout_marginRight="8sp"
                android:layout_marginBottom="4sp"
                android:layout_weight="1"
                android:text="Edereço de entrega"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageBtnSetaSobreApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:layout_marginRight="16sp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/icons_back" />
        </LinearLayout>



        <View
            android:id="@+id/divisorPerfil4"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"
            android:background="#E8E8E8" />

        <LinearLayout
            android:id="@+id/linearSuporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSuporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="4sp"
                android:layout_marginRight="8sp"
                android:layout_marginBottom="4sp"
                android:layout_weight="1"
                android:text="Suporte"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageBtnSetaSuporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:layout_marginRight="16sp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/icons_back" />
        </LinearLayout>

        <View
            android:id="@+id/divisorPerfil5"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="4sp"
            android:background="#E8E8E8" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>