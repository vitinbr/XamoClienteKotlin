<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

    <ImageView
        android:id="@+id/img_entregador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/image_entregador" />

    <TextView
        android:id="@+id/txt_se_entregador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="5sp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_entregador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_entregador"
        app:layout_constraintTop_toTopOf="@+id/img_entregador"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Seu entregador" />

    <TextView
        android:id="@+id/nome_entregador_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="4sp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_entregador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_entregador"
        app:layout_constraintTop_toTopOf="@+id/img_entregador"
        app:layout_constraintVertical_bias="0.75"
        tools:text="Jason Stroll" />

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balon_chat"
        android:hapticFeedbackEnabled="false"
        android:text="Chat"
        app:backgroundTint="@color/timeline_line_color"
        app:layout_constraintBottom_toBottomOf="@+id/nome_entregador_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nome_entregador_"
        app:layout_constraintTop_toTopOf="@+id/nome_entregador_" />

</androidx.constraintlayout.widget.ConstraintLayout>